<!DOCTYPE html>
<html>

<head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>

<body>

    <%- include('navbar.ejs');%>

        <div class="container d-flex flex-column align-items-center col-8 test">
            <% if (journeysAvailable.length==0) {%>
                <div class="row  title-home">
                    <h1>Oups ! No trains available...</h1>
                </div>
                <div class="row mt-2">
                    <a href="/homepage"><button class="btn btn-danger">Home</button></a>
                </div>
                <% } else {%>
                    <div class="row title-home mt-5">
                        <h1>Tickets available on <%= dateFormat(date) %> :</h1>
                    </div>
                    <% journeysAvailable.map(journey=> { %>
                        <div class="tickets">
                            <p>
                                <strong>
                                    <%= journey.departure %>/<%= journey.arrival %>
                                </strong>
                            </p>
                            <p>Train departure at <%= journey.departureTime %>
                            </p>
                            <p><strong>
                                    <%= journey.price %> â‚¬
                                </strong>
                            </p>
                            <a
                                href="/mytickets?arrival=<%= journey.arrival %>&departure=<%= journey.departure %>&price=<%= journey.price %>&date=<%= journey.date %>&departureTime=<%= journey.departureTime %> "><button
                                    class="btn btn-danger">OK</button></a>
                        </div>
                        <% }) %>
        </div>
        <% } %>

            <%- include('scripts.ejs'); %>
</body>

</html>