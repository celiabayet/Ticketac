<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
  <!-- Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>

<body>

  <%- include('navbar2.ejs');%>

    <div class="container d-flex flex-column align-items-center col-8 test">
      <% if (trips.length==0) {%>
        <div class="row  title-home">
          <h1>You don't have any trips yet !</h1>
        </div>
        <div class="row mt-2">
          <a href="/homepage"><button class="btn btn-danger">Home</button></a>
        </div>
        <% } else {%>
          <div class="row title-home mt-5">
            <h1>My last trips</h1>
          </div>

          <table class="table">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Journey</th>
                <th scope="col">Departure time</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody>
              <% trips.map(trip=> { %>
                <tr>
                  <td>
                    <%= dateFormat(trip.date.toUTCString()) %>
                  </td>
                  <td>
                    <%= trip.departure %>/<%= trip.arrival %>
                  </td>
                  <td>
                    <%= trip.departureTime %>
                  </td>
                  <td>
                    <%= trip.price %>â‚¬
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>

    </div>
    <% } %>

      <%- include('scripts.ejs'); %>
</body>

</html>